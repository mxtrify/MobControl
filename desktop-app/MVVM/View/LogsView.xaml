<UserControl x:Class="MobControlUI.MVVM.View.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MobControlUI.MVVM.View"
             xmlns:behaviors="clr-namespace:MobControlUI.Core.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700"
             Focusable="False">

    <Grid>
        <!-- Header row + content row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title (stretch) + Clear (auto) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header: left -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Console Logs"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- Header: right -->
        <Button Grid.Row="0" Grid.Column="1"
                Content="Clear"
                Command="{Binding ClearCommand}"
                Style="{StaticResource AppButtonDanger}"
                Margin="0,0,0,8"/>

        <!-- Log box spans both columns -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                CornerRadius="10" Padding="10" Height="350"
                Background="#343434" BorderBrush="#4a4a4a" BorderThickness="1">

            <!-- Virtualized, auto-scrolling log list -->
            <ListBox ItemsSource="{Binding Entries}"
                     behaviors:ListBoxBehaviors.AutoScrollToEnd="True"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <!-- Make item take full width so text can wrap -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Display, Mode=OneWay}"
                                 IsReadOnly="True"
                                 IsReadOnlyCaretVisible="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="White"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Disabled"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>