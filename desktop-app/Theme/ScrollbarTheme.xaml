<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
                    <!-- If your project targets .NET Framework, swap the line above to:
                        xmlns:sys="clr-namespace:System;assembly=mscorlib" -->

    <!-- Thumb (light pill) -->
    <Style x:Key="App.ScrollBarThumb" TargetType="Thumb">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="#E7E2E2" CornerRadius="6"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Hide the tiny arrow buttons (we rely on drag + wheel/page) -->
    <Style x:Key="App.ScrollBarLineButton" TargetType="RepeatButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="Height" Value="0"/>
        <Setter Property="Width"  Value="0"/>
    </Style>

    <!-- Main pill-style scrollbar -->
    <Style x:Key="App.PillScrollBar" TargetType="ScrollBar">
        <!-- Vertical defaults -->
        <Setter Property="Width"  Value="14"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid x:Name="Root">
                        <!-- Dark rounded track -->
                        <Border x:Name="TrackBg" Background="#3F3F43" CornerRadius="7" Margin="3"/>
                        <Track x:Name="PART_Track"
                               Orientation="{TemplateBinding Orientation}"
                               IsDirectionReversed="true">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineUpCommand"
                                              Style="{StaticResource App.ScrollBarLineButton}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource App.ScrollBarThumb}"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineDownCommand"
                                              Style="{StaticResource App.ScrollBarLineButton}"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>

                    <!-- Horizontal fallback (rare for LogsView) -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Width"  Value="{x:Static sys:Double.NaN}"/>
                            <Setter Property="Height" Value="14"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>    
</ResourceDictionary>