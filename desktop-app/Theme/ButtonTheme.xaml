<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Tokens -->
    <CornerRadius x:Key="AppButtonCornerRadius">8</CornerRadius>
    <Thickness x:Key="AppButtonPadding">12,6</Thickness>
    <Thickness x:Key="AppButtonBorderThickness">1</Thickness>

    <SolidColorBrush x:Key="AppBtn.Bg"         Color="#2A2C3A"/>
    <SolidColorBrush x:Key="AppBtn.Bg.Hover"   Color="#35384A"/>
    <SolidColorBrush x:Key="AppBtn.Bg.Pressed" Color="#1F2130"/>
    <SolidColorBrush x:Key="AppBtn.Fg"         Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AppBtn.Border"     Color="#3C3E52"/>
    <SolidColorBrush x:Key="AppBtn.DisabledBg" Color="#2A2C3A"/>
    <SolidColorBrush x:Key="AppBtn.DisabledFg" Color="#7A7D91"/>
    <SolidColorBrush x:Key="AppBtn.DisabledBorder" Color="#2E3040"/>

    <!-- Base button template -->
    <Style x:Key="AppButton" TargetType="Button">
        <Setter Property="Foreground"       Value="{StaticResource AppBtn.Fg}"/>
        <Setter Property="Background"       Value="{StaticResource AppBtn.Bg}"/>
        <Setter Property="BorderBrush"      Value="{StaticResource AppBtn.Border}"/>
        <Setter Property="BorderThickness"  Value="{StaticResource AppButtonBorderThickness}"/>
        <Setter Property="Padding"          Value="{StaticResource AppButtonPadding}"/>
        <Setter Property="FontSize"         Value="16"/>
        <Setter Property="MinHeight"        Value="32"/>
        <Setter Property="MinWidth"         Value="88"/>
        <Setter Property="Cursor"           Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment"   Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource AppButtonCornerRadius}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AppBtn.Bg.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AppBtn.Bg.Pressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AppBtn.DisabledBg}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppBtn.DisabledFg}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource AppBtn.DisabledBorder}"/>
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#6470FF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small variant -->
    <Style x:Key="AppButtonSmall" BasedOn="{StaticResource AppButton}" TargetType="Button">
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Padding"   Value="10,4"/>
        <Setter Property="FontSize"  Value="13"/>
        <Setter Property="MinWidth"  Value="72"/>
    </Style>

    <!-- Small variant 2 -->
    <Style x:Key="AppButtonSmall2" BasedOn="{StaticResource AppButton}" TargetType="Button">
        <Setter Property="FontWeight"  Value="SemiBold"/>
    </Style>

    <!-- Safe variant -->
    <Style x:Key="AppButtonSafe" BasedOn="{StaticResource AppButton}" TargetType="Button">
        <Setter Property="FontWeight"  Value="SemiBold"/>
        <Setter Property="Background" Value="#28A745"/>
        <Setter Property="BorderBrush" Value="#218838"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#34C759"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#1E7E34"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Danger variant (optional) -->
    <Style x:Key="AppButtonDanger" BasedOn="{StaticResource AppButton}" TargetType="Button">
        <Setter Property="FontWeight"  Value="SemiBold"/>
        <Setter Property="Background" Value="#FF3B30"/>
        <Setter Property="BorderBrush" Value="#CC3027"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF5147"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#E63A30"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>