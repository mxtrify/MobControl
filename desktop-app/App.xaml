<Application x:Class="MobControlUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MobControlUI"
             xmlns:viewModel="clr-namespace:MobControlUI.MVVM.ViewModel"
             xmlns:view="clr-namespace:MobControlUI.MVVM.View"
             ShutdownMode="OnMainWindowClose">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/TextboxTheme.xaml"/>
                <ResourceDictionary Source="/Theme/ButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/ScrollbarTheme.xaml"/>
                <ResourceDictionary Source="/Theme/Fonts.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style TargetType="ScrollBar" BasedOn="{StaticResource App.PillScrollBar}"/>

            <DataTemplate DataType="{x:Type viewModel:UpdateMappingViewModel}">
                <view:UpdateMappingView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
