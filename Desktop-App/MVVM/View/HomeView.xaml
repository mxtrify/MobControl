<UserControl x:Class="MobControlUI.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobControlUI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700">

    <Grid HorizontalAlignment="Center" 
          VerticalAlignment="Center"
          Width="700"
          Height="400">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </StackPanel.Resources>

            <StackPanel>
                <Border Width="325"
                        Height="100"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#63F8DA" Offset="0.0"/>
                            <GradientStop Color="#37F6D0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel Margin="10">
                        <TextBlock Text="WebSocket Status:"
                                   Foreground="#202231"
                                   FontSize="16"
                                   FontFamily="{StaticResource Jersey25}"/>

                        <TextBlock Text="{Binding WebSocketStatus}"
                                   Foreground="#202231"
                                   FontSize="16"
                                   FontFamily="{StaticResource Jersey25}"/>

                        <TextBlock Text="Connected Devices:"
                                   Foreground="#202231"
                                   FontSize="16"
                                   FontFamily="{StaticResource Jersey25}"
                                   Margin="0,10,0,0"/>

                        <TextBlock Text="{Binding ConnectedDevices}"
                                   Foreground="#202231"
                                   FontSize="16"
                                   FontFamily="{StaticResource Jersey25}"/>
                    </StackPanel>
                </Border>

                <Border Width="325"
                        Height="100"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#95dbfa" Offset="0.0"/>
                            <GradientStop Color="#63CBF8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <TextBlock Text="QR Code Pairing:&#x0a;Scan the QR Code with your mobile device.&#x0a;&#x0a;Manual Connection:&#x0a;Enter the session details in your mobile device."
                               Foreground="#202231"
                               FontSize="16"
                               FontFamily="{StaticResource Jersey25}"
                               Margin="10"/>
                </Border>

                <Border Width="325"
                        Height="75"
                        CornerRadius="10"
                        Margin="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#95A9FA" Offset="0.0"/>
                            <GradientStop Color="#6381F8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel Margin="10,10,10,10">
                        <TextBlock Text="Session Information:" 
                                   Foreground="#202231" 
                                   FontSize="16"
                                   FontFamily="{StaticResource Jersey25}"/>
                        
                        <TextBox Text="{Binding SessionUrl, Mode=OneWay}"
                                 IsReadOnly="True"
                                 IsReadOnlyCaretVisible="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#202231" 
                                 FontSize="16"
                                 FontFamily="{StaticResource Jersey25}"
                                 TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Disabled"
                                 SpellCheck.IsEnabled="False"
                                 FocusVisualStyle="{x:Null}"
                                 Cursor="IBeam"/>
                    </StackPanel>

                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </StackPanel.Resources>

            <StackPanel>
                <Border Width="300"
                        Height="300"
                        Background="#ff9b61"
                        CornerRadius="10"
                        Margin="10">
                    <Grid>
                        <Image Source="{Binding QrImage}" Stretch="Uniform" Margin="12"/>
                    </Grid>
                </Border>
            </StackPanel>

            <Button Content="Generate New QR Code"
                    Width="150" Height="28"
                    HorizontalAlignment="Center"
                    Command="{Binding GenerateNewSessionCommand}"
                    Style="{StaticResource AppButtonSmall}"/>

        </StackPanel>
    </Grid>
</UserControl>
